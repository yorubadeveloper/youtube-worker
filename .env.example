# Server Configuration
PORT=3000
NODE_ENV=production

# Timeout in milliseconds (default: 30000 = 30 seconds)
TIMEOUT=30000

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# Proxy Configuration (Optional - only enable if you experience IP blocking)
# Set USE_PROXY=true to enable proxy support
USE_PROXY=false

# Proxy URL format: http://username:password@proxy-host:port
# Examples:
#   - Public proxy: http://proxy.example.com:8080
#   - Authenticated: http://user:pass@proxy.example.com:8080
#   - SOCKS5: socks5://proxy.example.com:1080
# PROXY_URL=http://your-proxy-server:port

# Proxy Rotation (Advanced - for high volume usage)
# Comma-separated list of proxy URLs for rotation
# PROXY_LIST=http://proxy1:8080,http://proxy2:8080,http://proxy3:8080
